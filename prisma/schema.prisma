generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  password  String
  email     String @unique
  username  String

  @@map("user")
}

model Post {
  id        String    @id @default(uuid())
  message   String
  userId    String
  createdAt DateTime
  likes     Int?
  comments  Comment[]

  @@map("post")
}

model Comment {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime
  postId    String
  fkPost    Post     @relation(fields: [postId], references: [id])

  @@map("comment")
}
